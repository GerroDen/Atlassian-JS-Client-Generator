{
  "name": "atlassian-js-client-generator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "generated-code/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:bamboo-api": "gen-tool/build-api.js bamboo-api",
    "build:bitbucket-api": "gen-tool/build-api.js bitbucket-api",
    "build:confluence-cloud-api": "gen-tool/build-api.js confluence-cloud-api",
    "build:jira-cloud-api": "gen-tool/build-api.js jira-cloud-api",
    "fetch": "run-s 'fetch:**'",
    "fetch:swagger:confluence-cloud-api": "curl -o confluence-cloud-api/swagger.json https://developer.atlassian.com/cloud/confluence/swagger.v3.json",
    "fetch:swagger:jira-cloud-api": "curl -o jira-cloud-api/swagger.json https://developer.atlassian.com/cloud/jira/platform/swagger-v3.v3.json",
    "fetch:swagger:bamboo-api": "curl -o bamboo-api/swagger.json https://developer.atlassian.com/server/bamboo/swagger.v3.json",
    "fetch:swagger:bitbucket-api": "curl -o bitbucket-api/swagger.json https://developer.atlassian.com/server/bitbucket/8.6.swagger.v3.json",
    "gen": "run-s 'gen:*'",
    "gen:bamboo-api": "gen-tool/gen-api.js bamboo-api && tsc -p generated-code/bamboo-api --noEmit",
    "gen:bitbucket-api": "gen-tool/gen-api.js bitbucket-api && gen-tool/fix-bitbucket-gen.js && tsc -p generated-code/bitbucket-api --noEmit",
    "gen:confluence-cloud-api": "gen-tool/gen-api.js confluence-cloud-api && gen-tool/fix-confluence-cloud-gen.js && tsc -p generated-code/confluence-cloud-api --noEmit",
    "gen:jira-cloud-api": "gen-tool/gen-api.js jira-cloud-api && gen-tool/fix-jira-cloud-gen.js && tsc -p generated-code/jira-cloud-api --noEmit",
    "lint": "eslint . --ext js,cjs"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "exec-sh": "^0.4.0",
    "glob": "^8.0.3",
    "npm-check-updates": "^16.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  }
}
